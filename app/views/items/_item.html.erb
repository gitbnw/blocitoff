<h4 class="media-heading">items you need to do</h4>
<ul><% @user.items.each do |item| %>
<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
    <li class="items">
        <%= link_to "", user_item_complete_path(@user.id, item.id), method: :put, class: 'glyphicon glyphicon-ok text-success', remote: true %>    
        <%= item.name %> (expires in: <%= distance_of_time_in_words(item.created_at + 7.days, Date.today) %> on <%=item.created_at + 7.days %>)
        <%= link_to "", [@user, item], method: :delete, class: 'glyphicon glyphicon-remove text-danger', remote: true %>
    </li>
    <% end %> 
<% end %>
</ul>